<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.gui.LoginController">
    <children>
        <Label text="Login Page" layoutX="130" layoutY="50"/>
        <TextField fx:id="usernameField" layoutX="100" layoutY="100" promptText="Username"/>
        <PasswordField fx:id="passwordField" layoutX="100" layoutY="140" promptText="Password"/>
        <Button text="Login" layoutX="150" layoutY="190" fx:id="loginButton" onAction="#onLoginClick"/>
    </children>
</AnchorPane>
